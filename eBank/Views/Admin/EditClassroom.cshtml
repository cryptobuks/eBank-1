@model eBank.Models.Classroom

@{
    ViewBag.Title = "EditClassroom";
}

<h2>Edit Classroom</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Classroom</legend>

        @Html.HiddenFor(model => model.ClassroomID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ClassroomName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClassroomName)
            @Html.ValidationMessageFor(model => model.ClassroomName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherID)
            @Html.ValidationMessageFor(model => model.TeacherID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "ViewClassroom", new { id = Model.ClassroomID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
