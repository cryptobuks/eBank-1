@model IEnumerable<eBank.Models.Classroom>

@{
    ViewBag.Title = "ListClassrooms";
}

<nav>
    <ul id="menu">
        <li>@Html.ActionLink("Students", "ListStudents", "Admin")</li>
        <li>@Html.ActionLink("Teachers", "ListTeachers", "Admin")</li>
        <li>@Html.ActionLink("Classrooms", "ListClassrooms", "Admin")</li>
        <li>@Html.ActionLink("Simulation Settings", "SimulationSettings", "Admin")</li>
    </ul>
</nav>

<h2 align="center">List Classrooms</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassroomName)
        </th>
        <th>
            Teacher
        </th>
        <th>
            Number Of Students
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ClassroomName, "ViewClassroom", new { id = item.ClassroomID })
        </td>
        <td>
            @Html.ActionLink(item.Teacher.FirstName + " " + item.Teacher.LastName, "ViewTeacher", new { id = item.TeacherID  })
        </td>
        <td>
            @item.Students.Count()
        </td>
    </tr>
}

</table>
